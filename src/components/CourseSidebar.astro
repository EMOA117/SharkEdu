---
interface Section {
  title: string;
  link: string;
}

interface Props {
  sections: Section[];
}

const { sections } = Astro.props as Props;
---

<aside class="w-64 bg-gray-100 p-4">
  <h2 class="text-lg font-semibold mb-4">Contenido del Curso</h2>
  <ul>
    {sections.map(section => (
      <li class="mb-2">
        <a href={section.link} class="text-blue-500 hover:underline">{section.title}</a>
      </li>
    ))}
  </ul>
</aside>
