---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CourseSidebar from '../components/CourseSidebar.astro';

interface Section {
  title: string;
  link: string;
}

interface Props {
  sections: Section[];
}

const { sections } = Astro.props as Props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SharkEdu - Curso</title>
    <!-- <link rel="stylesheet" href="/src/styles/globals.css" /> -->
  </head>
  <body class="bg-background-primary text-tx-primary">
    <Navbar />
    <div class="container mx-auto flex p-4">
      <CourseSidebar sections={sections} />
      <main class="flex-1 p-4">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
